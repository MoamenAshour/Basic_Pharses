<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <GridLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="0"
          android:layout_row="0"
          android:layout_gravity="fill"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:id="@+id/kaivon"
          android:onClick="buttonTapped"
          android:text="Kaivon">
      </Button>

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_row="0"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_gravity="fill"
          android:id="@+id/davidguetta"
          android:onClick="buttonTapped"
          android:text="David Guetta">
      </Button>


      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="0"
          android:layout_row="1"
          android:layout_gravity="fill"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:onClick="buttonTapped"
          android:id="@+id/jerome"
          android:text="Jerome">
      </Button>


      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_row="1"
          android:layout_gravity="fill"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:id="@+id/amanbalee"
          android:onClick="buttonTapped"
          android:text="Aman Balee">
      </Button>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="0"
          android:layout_row="2"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_gravity="fill"
          android:id="@+id/cvrbi"
          android:onClick="buttonTapped"
          android:text="cvrbi">
      </Button>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_row="2"
          android:layout_gravity="fill"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:id="@+id/dualipafeatmiguel"
          android:onClick="buttonTapped"
          android:text="Dua Lipa feat Miguel">
      </Button>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="0"
          android:layout_row="3"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_gravity="fill"
          android:id="@+id/lightarmy"
          android:onClick="buttonTapped"
          android:text="Light Army">
      </Button>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_row="3"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_gravity="fill"
          android:id="@+id/nuaspect"
          android:onClick="buttonTapped"
          android:text="Nu Aspect">
      </Button>

  </GridLayout>

</RelativeLayout>